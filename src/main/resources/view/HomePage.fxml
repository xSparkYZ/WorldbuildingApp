<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="be.wba.worldbuildingapp.controller.HomeController">

    <!-- Background image -->
    <ImageView fx:id="backgroundImage"
               fitWidth="1200"
               fitHeight="800"
               preserveRatio="false"
               opacity="0.25"
               StackPane.alignment="CENTER"
               pickOnBounds="false"
               style="-fx-effect: innershadow(gaussian, black, 40, 0.3, 0, 0);" />

    <!-- Main content over image -->
    <VBox spacing="20.0"
          maxWidth="600"
          style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 20; -fx-background-radius: 10;">
        <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
        </padding>

        <!-- Header with Exit button -->
        <HBox spacing="10.0">
            <Label text="Your Projects"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
            <Button text="Exit"
                    onAction="#handleExit"
                    style="-fx-background-color: red; -fx-text-fill: white;" />
        </HBox>

        <ListView fx:id="projectList" prefHeight="300.0"/>

        <HBox spacing="10.0">
            <Button text="Create New Project"
                    onAction="#handleNewProject"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
            <Button text="Open Selected Project"
                    onAction="#handleOpenProject"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
            <Button text="Delete Selected Project"
                    onAction="#handleDeleteProject"
                    style="-fx-background-color: #f44336; -fx-text-fill: white;" />
        </HBox>
    </VBox>
</StackPane>
